<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mobilerental">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MobileRental">
        <activity android:name=".Management"/>
        <activity
            android:name=".LoeschenAuto"
            android:label="@string/title_activity_loeschen_auto"
            android:theme="@style/Theme.MobileRental.NoActionBar" />
        <activity
            android:name=".AnlegenAuto"
            android:label="@string/title_activity_anlegen_auto"
            android:theme="@style/Theme.MobileRental.NoActionBar" />
        <activity
            android:name=".AendernAuto"
            android:label="@string/title_activity_aendern_auto"
            android:theme="@style/Theme.MobileRental.NoActionBar" />
        <activity
            android:name=".AendernKunde"
            android:label="@string/title_activity_aendern_kunde"
            android:theme="@style/Theme.MobileRental.NoActionBar" />
        <activity
            android:name=".LoeschenKunde"
            android:label="@string/title_activity_loeschen_kunde"
            android:theme="@style/Theme.MobileRental.NoActionBar" />
        <activity
            android:name=".AnlegenKunde"
            android:label="@string/title_activity_anlegen_kunde"
            android:theme="@style/Theme.MobileRental.NoActionBar" />
        <activity
            android:name=".Bestellung"
            android:label="@string/title_activity_bestellung"
            android:theme="@style/Theme.MobileRental.NoActionBar" />
        <activity
            android:name=".ScrollingActivity"
            android:label="@string/title_activity_scrolling"
            android:theme="@style/Theme.MobileRental.NoActionBar" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <provider
            android:name=".RentalProvider"
            android:authorities="com.example.mobilerental"
            android:exported="false">
        </provider>
    </application>

</manifest>